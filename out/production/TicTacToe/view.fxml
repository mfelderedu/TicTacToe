<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- Container -->
<GridPane hgap="0" vgap="0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <gridLinesVisible>false</gridLinesVisible>

    <!-- Left Grid -->
    <GridPane styleClass="grid-left" GridPane.columnIndex="0" GridPane.rowIndex="0" prefHeight="450" prefWidth="450" alignment="center">
        <gridLinesVisible>false</gridLinesVisible>
        <!-- TTT-Fields -->
        <Button fx:id="a1" styleClass="ttt-field" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text="x" />
        <Button fx:id="a2" styleClass="ttt-field" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text="x" />
        <Button fx:id="a3" styleClass="ttt-field" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text="x" />
        <Button fx:id="b1" styleClass="ttt-field" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text="" />
        <Button fx:id="b2" styleClass="ttt-field" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text="o" />
        <Button fx:id="b3" styleClass="ttt-field" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text="" />
        <Button fx:id="c1" styleClass="ttt-field" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text="o" />
        <Button fx:id="c2" styleClass="ttt-field" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text=" " />
        <Button fx:id="c3" styleClass="ttt-field" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.fillWidth="100" GridPane.fillHeight="100" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.halignment="CENTER" text=" " />
    </GridPane>

    <!-- Right Grid -->
    <GridPane styleClass="grid-right" GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="450" prefWidth="250" hgap="10" vgap="10">
        <padding>
            <Insets bottom="10" left="25" right="25" top="25" />
        </padding>
        <gridLinesVisible>false</gridLinesVisible>

        <!-- Table-head -->
        <Text styleClass="table-header" GridPane.columnIndex="4" GridPane.rowIndex="0" GridPane.valignment="CENTER">W</Text>

        <!-- Player 1 -->
        <Text styleClass="table-user-sign" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="CENTER">x</Text>
        <Text styleClass="table-user-name" GridPane.columnIndex="1" GridPane.rowIndex="1">Spieler 1</Text>
        <Text styleClass="table-user-points" GridPane.columnIndex="4" GridPane.rowIndex="1" GridPane.valignment="CENTER">4</Text>

        <!-- Player 2 -->
        <Text styleClass="table-user-sign" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="CENTER">o</Text>
        <Text styleClass="table-user-name" GridPane.columnIndex="1" GridPane.rowIndex="2">Spieler 2</Text>
        <Text styleClass="table-user-points" GridPane.columnIndex="4" GridPane.rowIndex="2" GridPane.valignment="CENTER">4</Text>

        <!-- Menu-Buttons -->
        <Button styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="3" GridPane.halignment="CENTER" text="Neustart" />
        <Button styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="10" GridPane.columnSpan="3" GridPane.halignment="CENTER" text="Neues Spiel" />
        <Button styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="11" GridPane.columnSpan="3" GridPane.halignment="CENTER" text="Einstellungen" />
        <Button styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="12" GridPane.columnSpan="3" GridPane.halignment="CENTER" text="Beenden" />
    </GridPane>
</GridPane>